<Window x:Class="NewPaint.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewPaint"
        mc:Ignorable="d"
        Icon="Icons/starry-night.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="About" Height="200" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Margin="0,0,0,87" Grid.RowSpan="3" Source="Icons/starry-night.png"/>
        <TextBlock Grid.Row="1" Margin="0,90,0,0" Grid.RowSpan="2">
            Product Name: Peint Deluxe
            <LineBreak />
            Version: 1.0
            <LineBreak />
            Company Name: "ООО LevAn"
            <LineBreak />
            Description: Lab1 SC
        </TextBlock>
    </Grid>
</Window>
